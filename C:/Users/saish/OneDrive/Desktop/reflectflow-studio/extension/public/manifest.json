{
  "manifest_version": 3,
  "name": "ReflectFlow",
  "version": "0.1.0",
  "description": "A browser extension to record and playback UI interactions.",
  "permissions": ["tabs", "activeTab", "storage"],
  "action": {
    "default_title": "ReflectFlow"
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.tsx"]
    }
  ]
}
